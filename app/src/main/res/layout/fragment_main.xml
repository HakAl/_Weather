<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/divider"
    android:id="@+id/parent_fragment_current"
    tools:context=".MainActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/img_current_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txt_current_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="44sp"
        android:gravity="left"
        android:textColor="@color/icons"/>

    <TextView
        android:id="@+id/txt_current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="60sp"
        android:gravity="left"
        android:textColor="@color/icons"/>

    <TextView
        android:id="@+id/txt_current_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_current_secondary"
        android:layout_alignParentRight="true"
        android:textSize="36sp"
        android:gravity="left"
        android:textColor="@color/icons"/>

    <TextView
        android:id="@+id/txt_current_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="28sp"
        android:textColor="@color/icons"/>


</RelativeLayout>
